<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:id="@+id/tripsFragmentItemImage"
            android:layout_width="358dp"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:foreground="@drawable/image_alpha"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/tripsImageAlphaHideTitle"
            style="@style/alpha_hide_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mo Chi Minh City"
            android:layout_marginTop="67dp"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="@+id/tripsFragmentItemImage"
            app:layout_constraintStart_toStartOf="@+id/tripsFragmentItemImage"
            app:layout_constraintTop_toTopOf="@+id/tripsFragmentItemImage">

        </TextView>
        <TextView
            android:id="@+id/tripsImageAlphaBodyTitle"
            style="@style/alpha_body_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed, 29 Dec - 31 Dec"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tripsFragmentItemImage"
            app:layout_constraintStart_toStartOf="@+id/tripsFragmentItemImage"
            app:layout_constraintTop_toBottomOf="@id/tripsImageAlphaHideTitle">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>